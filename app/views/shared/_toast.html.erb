<%# locals: (type:, message:) %>
<div class="fixed top-4 inset-x-4 z-50 flex justify-center pointer-events-none"
     data-controller="toast"
     data-toast-dismiss-after-value="4000">
  <div class="pointer-events-auto max-w-sm w-full rounded-xl px-4 py-3 shadow-lg
              <%= type == :alert ? 'bg-red-50 text-red-900 border border-red-200' : 'bg-forma-gray-900 text-white' %>"
       data-toast-target="message">
    <p class="text-sm text-center"><%= message %></p>
  </div>
</div>
