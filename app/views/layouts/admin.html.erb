<!DOCTYPE html>
<html lang="ru">
  <head>
    <title><%= content_for(:title) || "Админка — FORMA" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50 text-gray-900 antialiased min-h-dvh">
    <%# Sidebar %>
    <nav class="fixed top-0 left-0 w-56 h-full bg-white border-r border-gray-200 z-30 hidden lg:block">
      <div class="p-4 border-b border-gray-200">
        <a href="<%= admin_root_path %>" class="text-lg font-bold">FORMA Admin</a>
      </div>
      <ul class="p-2 space-y-0.5 text-sm">
        <%= admin_nav_link "Дашборд",  admin_root_path,        "dashboard" %>
        <%= admin_nav_link "Теги",     admin_tags_path,         "tags" %>
        <%= admin_nav_link "Стили",    admin_styles_path,       "styles" %>
        <%= admin_nav_link "Заказы",   admin_orders_path,       "orders" %>
        <%= admin_nav_link "Настройки", admin_settings_path,    "settings" %>
        <%= admin_nav_link "Аудит",    admin_audit_logs_path,   "audit_logs" %>
      </ul>
      <div class="absolute bottom-0 w-full p-4 border-t border-gray-200 text-xs text-gray-500">
        <%= current_user&.name || current_user&.email %>
      </div>
    </nav>

    <%# Mobile header %>
    <header class="lg:hidden fixed top-0 left-0 right-0 h-14 bg-white border-b border-gray-200 z-30 flex items-center px-4">
      <button class="mr-3" data-controller="admin-menu" data-action="click->admin-menu#toggle">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
          <path fill-rule="evenodd" d="M2 4.75A.75.75 0 0 1 2.75 4h14.5a.75.75 0 0 1 0 1.5H2.75A.75.75 0 0 1 2 4.75Zm0 10.5a.75.75 0 0 1 .75-.75h14.5a.75.75 0 0 1 0 1.5H2.75a.75.75 0 0 1-.75-.75ZM2 10a.75.75 0 0 1 .75-.75h7.5a.75.75 0 0 1 0 1.5h-7.5A.75.75 0 0 1 2 10Z" clip-rule="evenodd" />
        </svg>
      </button>
      <span class="font-bold">FORMA Admin</span>
    </header>

    <%# Content %>
    <main class="lg:ml-56 pt-14 lg:pt-0 min-h-dvh">
      <% if flash[:notice] %>
        <div class="m-4 p-3 bg-green-50 border border-green-200 rounded-lg text-sm text-green-700"><%= flash[:notice] %></div>
      <% end %>
      <% if flash[:alert] %>
        <div class="m-4 p-3 bg-red-50 border border-red-200 rounded-lg text-sm text-red-700"><%= flash[:alert] %></div>
      <% end %>

      <%= yield %>
    </main>
  </body>
</html>
